
- @body_class = 'login'
  
.background-image-overlay


.login-wrapper
  = link_to (image_tag(asset_path('logo-lg.png'), class: 'logo')), root_path
  
  .twitter
    = link_to image_tag(asset_path('twitter.png')) + 'Sign in with Twitter', user_omniauth_connect_path(:twitter), class: 'btn-glow primary'
  
  .box
    .content-wrap
      %h6 Sign in

      = form_for(resource, as: resource_name, url: session_path(resource_name), role: 'form') do |f|
        
        .form-group.email
          = f.label :email, 'Email address', class: 'sr-only'
          = f.email_field :email, class: "form-control", placeholder: "Email address", autofocus: true
          
        .form-group  
          = f.label :password, 'Password', class: 'sr-only'
          = f.password_field :password, class: "form-control", placeholder: "Your password", autocomplete: "off"
        
        = link_to 'Forgot password?', forgot_password_path, class: 'forgot'
        
        - if devise_mapping.rememberable?
          .remember
            = f.check_box :remember_me
            = f.label :remember_me, "Remember me"
        
        = f.submit "Log in", class: "btn-glow primary"
        
  .no-account
    %p
      Integration with other social platforms, e.g. Facebook,
      %br
      is coming soon.

