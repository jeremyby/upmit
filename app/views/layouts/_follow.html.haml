

.follow
  - if current_user.following?(user)
    = link_to "Unfollow #{ user.username.titlecase }", user_follow_path(user), method: :delete, remote: true, class: 'btn btn-warning unfollow'
    .following.btn.btn-info following
  - else
    = link_to "Follow #{ user.username.titlecase }", user_follow_path(user), method: :post, remote: true, class: 'btn btn-success'
    