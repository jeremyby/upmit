:sass
  body
    background: #000
    color: #fff
    font-size: 18px


.background-image-overlay

#outer-background-container(data-default-background-img="/assets/other_images/bg5.jpg" style="background-image:url(/assets/other_images/bg5.jpg);")

/ Outer Container
#outer-container.homer

  / Left Sidebar
  %section#left-sidebar
    .logo
      %a.link-scroll(href="#intro")
        %img(alt="Twilli Air" src="/assets/logo.png")

    / Menu Icon for smaller viewports
    #mobile-menu-icon.visible-xs{onclick: "toggle_main_menu();"}
      %span.glyphicon.glyphicon-th
    
    %ul#main-menu
      %li#menu-item-text.menu-item.scroll
        %a(href="#text") Text
      %li#menu-item-carousel.menu-item.scroll
        %a(href="#carousel") Carousel
      %li#menu-item-grid.menu-item.scroll
        %a(href="#grid") Grid
      %li#menu-item-featured.menu-item.scroll
        %a(href="#featured") Featured
      %li#menu-item-contact.menu-item.scroll
        %a(href="#contact") Start Now!

