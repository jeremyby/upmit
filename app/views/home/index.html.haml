    %article#contact.section-wrapper.clearfix(data-custom-background-img="/assets/other_images/bg4.jpg")
      .content-wrapper.clearfix
        %h1.section-title Contact
        / CONTACT DETAILS
        .contact-details.col-sm-5.col-md-3
          %p
            123A,
            %br
            Molestie Lorem Avenue,
            %br
            Aliquam
            %br
            AAA0010
          %p Tel: (+20) 21 301 524
          %p
            %a(href="mailto:info@loremipsum.com") info@loremipsum.com

        / CONTACT FORM
        .col-sm-7.col-md-9
          / IMPORTANT: change the email address at the top of the assets/php/mail.php file to the email address that you want this form to send to
          %form.form-style.validate-form.clearfix(action="/assets/php/mail.php" method="POST" role="form")
            / form left col
            .col-md-6
              .form-group
                %input#form-name.text-field.form-control.validate-field.required(data-validation-type="string" name="name" placeholder="Full Name" type="text")
              .form-group
                %input#form-email.text-field.form-control.validate-field.required(data-validation-type="email" name="email" placeholder="Email Address" type="email")
              .form-group
                %input#form-contact-number.text-field.form-control.validate-field.phone(data-validation-type="phone" name="contact_number" placeholder="Contact Number" type="tel")

            .col-md-6
              .form-group
                %textarea.form-control.validate-field.required(name="message" placeholder="Message...")
              .form-group
                %img.form-loader(src="/assets/theme_images/loader-form.GIF")
                %button.btn.btn-sm.btn-outline-inverse(type="submit") Submit
              .form-group.form-general-error-container

  / Footer
  %section#footer
    / Go to Top
    #go-to-top(onclick="scroll_to_top();")
      %span.icon.glyphicon.glyphicon-chevron-up
    %ul.social-icons
      %li
        %a(href="#" target="_blank" title="Facebook")
          %img(alt="Facebook" src="/assets/theme_images/social_icons/facebook.png")
      %li
        %a(href="#" target="_blank" title="Twitter")
          %img(alt="Twitter" src="/assets/theme_images/social_icons/twitter.png")
      %li
        %a(href="#" target="_blank" title="Google+")
          %img(alt="Google+" src="/assets/theme_images/social_icons/googleplus.png")
    / copyright text
    .footer-text-line © 2014 Upmit

