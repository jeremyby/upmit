
.login-wrapper
  = link_to image_tag(asset_path('logo-home.png'), class: 'logo'), root_path
  
  .box
    .content-wrap
      %h6 Log in
      
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = f.email_field :email, class: "form-control", placeholder: "Email address", autofocus: true
        = f.password_field :password, class: "form-control", placeholder: "Your password", autocomplete: "off"

        %a.forgot{href: "#"} Forgot password?
        
        - if devise_mapping.rememberable?
          .remember
            = f.check_box :remember_me
            = f.label :remember_me, "Remember me"
        
        = f.submit "Log in", class: "btn-glow primary login"
  .no-account
    %p Don't have an account?
    = link_to 'Sign up', signup_path

:css
  body {
    background: none;
  }

:javascript
  $('html').addClass('login-bg');