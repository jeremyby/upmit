    %article#featured.section-wrapper.clearfix(data-custom-background-img="/assets/other_images/bg3.jpg")
      .content-wrapper.clearfix
        .col-sm-11.pull-right
          %h1.section-title Featured
          / feature columns
          %section.feature-columns.row.clearfix
            / feature 1
            %article.feature-col.col-md-4
              %a.thumbnail.linked(href="#")
                .image-container
                  %img.lazy.item-thumbnail(alt="Lorem Ipsum" data-img-src="/assets/other_images/project-3.jpg")
                .caption
                  %h5 Image Carousel
                  %p This feature contains an image carousel when you open popup.

            / feature 2
            %article.feature-col.col-md-4
