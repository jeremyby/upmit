%header.navbar.navbar-inverse(role="banner")
  .navbar-header
    %button#menu-toggler.navbar-toggle(data-toggle="collapse" type="button")
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand(href="/")
      = image_tag asset_path('logo.png'), alt: 'Upmit'
      
  %ul.nav.navbar-nav.pull-right.hidden-xs
    %li.home
      %a(href='/')
        %i.fa.fa-home
  
    %li.notification-dropdown.hidden-xs
      %a.trigger(href="#")
        %i.fa.fa-exclamation-triangle
        %span.count 8
      .pop-dialog
        .pointer.right
          .arrow
          .arrow_border
        .body
          %a.close-icon(href="#")
            %i.fa.fa-times-circle
          .notifications
            %h3 You have 6 new notifications
            %a.item(href="#")
              %i.icon-signin
              New user registration
              %span.time
                %i.icon-time
                13 min.
            %a.item(href="#")
              %i.icon-signin
              New user registration
              %span.time
                %i.icon-time
                18 min.
            %a.item(href="#")
              %i.icon-envelope-alt
              New message from Alejandra
              %span.time
                %i.icon-time
                28 min.
            %a.item(href="#")
              %i.icon-signin
              New user registration
              %span.time
                %i.icon-time
                49 min.
            %a.item(href="#")
              %i.icon-download-alt
              New order placed
              %span.time
                %i.icon-time
                1 day.
            .footer
              %a.logout(href="#") View all notifications
    %li.current_user
      %a(href='/settings/profile')
        .avatar= image_tag asset_path(current_user.avatar.thumb.url), size: '32x32'
        .username= current_user.username
              
    %li.dropdown.settings
      %a.dropdown-toggle.hidden-xs(data-toggle="dropdown" href="#")
        %i.fa.fa-cog
      %ul.dropdown-menu(role='menu')
        %li= link_to 'Preference', preference_users_path
        %li
          %a(href="#") 
            Feedback
            %i.fa.fa-external-link
        %li.break= link_to 'Settings', account_users_path
        %li
          = link_to 'Log out', destroy_user_session_path, method: :delete
